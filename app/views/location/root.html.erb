<% if flash[:errors] %>
  <ul class="flash">
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="page">
  <div class="zip_code_query">
    <h1>Rain Fall</h1>



    <form  action="/location/" method="get">
      <label>

        <input class="form_input" type="text" name="zip_code" placeholder="Zip Code (US only)">
      </label>
      <br>
      <input type="submit" value="See Rainfall!">
    </form>
  </div>
</div>
