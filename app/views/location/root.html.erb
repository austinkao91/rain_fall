<h1>Rain Fall</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="query">
  <form action="/location/" method="get">
    <label>
      Zip Code
      <input type="text" name="zip_code">
    </label>
    <input type="submit" value="See Rainfall!">
  </form>
</div>
